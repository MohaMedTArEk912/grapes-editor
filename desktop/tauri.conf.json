  "productName": "Akasha",
  "version": "0.1.0",
  "identifier": "com.akasha.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "./dist"
  },
  "app": {
    "windows": [
      {
        "title": "Akasha â€” Visual Full-Stack SaaS Builder",
        "width": 1400,
        "height": 900,
